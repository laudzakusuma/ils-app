// User Management
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  username      String    @unique
  passwordHash  String
  profileImage  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relationships
  healthData    HealthData[]
  schedules     Schedule[]
  transportData TransportData[]
  notifications Notification[]
  preferences   UserPreferences?
  
  @@map("users")
}

// Health & Wellness
model HealthData {
  id          String   @id @default(cuid())
  userId      String
  heartRate   Int?
  steps       Int?
  hydration   Float?
  energy      Float?
  sleep       Float?
  timestamp   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id])
  
  @@map("health_data")
}

// Smart Scheduling
model Schedule {
  id          String      @id @default(cuid())
  userId      String
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  type        ScheduleType
  status      ScheduleStatus
  priority    Priority
  location    String?
  
  user User @relation(fields: [userId], references: [id])
  
  @@map("schedules")
}

// Transportation
model TransportData {
  id          String    @id @default(cuid())
  userId      String
  origin      String
  destination String
  mode        TransportMode
  duration    Int
  cost        Float?
  timestamp   DateTime  @default(now())
  
  user User @relation(fields: [userId], references: [id])
  
  @@map("transport_data")
}